{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

<h1> Remplissez ce formulaire pour déposer votre annonce </h1>

<div id="formAnnonce">



    {{ form_start (form)}}

    {{ form_row (form.name, {'attr': {'placeholder': "Votre nom"}, 'label': "Nom"} ) }}
    {{ form_row (form.prenom, {'attr': {'placeholder': "Votre prénom"}, 'label': "Prénom"} ) }}
    {{ form_row (form.email, {'attr': {'placeholder': "Votre Email"}, 'label': "Email"} ) }}
    {{ form_row (form.age, {'attr': {'placeholder': "Votre mot de passe"}, 'label': "Mot de passe"} ) }}
    {{ form_row (form.information, {'attr': {'placeholder': "Confirmer votre mot de passe"}, 'label': "Confirmation mot de passe"} ) }}

    <div class="form-group">
            <button type="submit" class="btn btn-success">Envoyer</button>
    </div>

    {{ form_end (form)}}
    

</div>
