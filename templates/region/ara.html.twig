{% extends 'base.html.twig' %}


{% block body %}

<div id="categorieTitle"> 
    <h1>Les offres en informatique</h1>
</div>

<div id="annonces">
        <div id="annonce">
            {% if regAra is empty %}
                Pas d'annonce dans cette région pour le moment
            {% else %}
            {% for regAra in regAra %}
                <p class="pix"><img src ={{ asset('build/catIT.jpg') }} width="350px" height="200px" alt=""></p>
                <h3 class="categorie">{{ regAra.categorie }}</h3>
                <p class="identity">{{ regAra.nom }} {{ regAra.prenom }} - {{ regAra.region }}</p>
                <p class="new">Prétentations salariale: {{ regAra.pretentions }}€</p>

                <p class="description">Description: {{ regAra.information }} </p>

                <a href="#">Plus d'information</a>
            {% endfor %}
        
        </div>
{% endif %}
</div> 
<br>
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}
